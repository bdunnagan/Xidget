<create assign="hscale" name="'scale'"/>
<create assign="vscale" name="'scale'"/>

<hscale>
  <min>$minx</min>
  <max>optional</max>
  <log>optional</log>
  <cursor>$x</cursor>
  <scale>$hscale</scale>
</hscale>

<vscale>
  <min>optional</min>
  <max>optional</max>
  <log>optional</log>
  <cursor>$y</cursor>
  <scale>$vscale</scale>
</vscale>

<graph>
  <points>
    <list>path-to-point-nodes</list>
    <coord name="x">rel-path-to-value</coord>
    <coord name="y">rel-path-to-value</coord>
  </points>
  
  <points>
    <list>path-to-point-nodes</list>
    <coord name="t">rel-path-to-value</coord>
    <coord name="v">rel-path-to-value</coord>
  </points>
  
  <hcursor>$x</hcursor>
  <vcursor>$y</vcursor>

  <hscale>$hscale</hscale>
  <vscale>$vscale</vscale>
</graph>

