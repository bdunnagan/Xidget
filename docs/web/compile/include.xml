<script>
  <for source=".//include">
    <assign name="target" mode="copy">evaluate( $html, string( .), null)</assign>
    <set source="@meta:index">@meta:index</set>
    <assign name="index">index-of( ../*, .)</assign>
    <delete>.</delete>
    <add index="$index" source="$target">..</add>
  </for>
  <print>.</print>
</script>