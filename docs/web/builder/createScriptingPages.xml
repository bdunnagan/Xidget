<script>
  <assign name="files">
    $web/Scripting/*[ matches( name(), '.*[.]html$')] |
    $web/Scripting/Layout/*[ matches( name(), '.*[.]html$')]
  </assign>

  <!-- create nav -->  
  <create assign="anav">
    <template>
      <nav>
        <place title="Home" link="index.html"/>
        <place title="Download" link="Downloads.html"/>
        <place title="Xidgets" link="XidgetOverview.html"/>
        <place title="Scripting" link="ScriptingOverview.html"/>
        <place title="About" link="About.html"/>
      </nav>
    </template>
  </create>
  
  <!-- overview -->  
  <create parent="$anav/place[ @title='Xidgets']">
    <template>
      <place title="Overview" link="XidgetOverview.html"/>
    </template>
  </create>
  
  <!-- scripting elements -->
  <for assign="file" source="$files">
    <assign name="path">replace( string( $file/@path), '[\\]', '/')</assign>
    <assign name="path">replace( $path, '^docs/web/', '')</assign>
    <create parent="$anav/place[ @title='Scripting']">
      <template>
        <place title="{$file/html/head/title}" link="{$path}"/>
      </template>
    </create>
  </for>
  
  <assign name="template">$web/Master.html/html</assign>
  <invoke>$builder/createPages.xml/*</invoke>  
</script>